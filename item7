#include<iostream>
#include<conio.h>
using namespace std;
int main() 
{
	int num1, sum;
	
	cout<<"Enter a number: "; cin>>num1;
	
	while(num1 > 0){
		sum = 0;
		
		for(int x=1; x<=num1; x++){
			sum += x;
		}
			cout<<"Your sum from 1 to "<<num1<<" is: "<<sum<<endl;
			cout<<"Enter a number: "; cin>>num1;		
		}
			cout<<"Thank you!";
			
			getch();
			return 0;
			
	}
